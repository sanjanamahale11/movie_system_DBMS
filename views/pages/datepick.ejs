<!DOCTYPE html>
<html>
<head>
    <title></title>

<link rel="stylesheet" href="/datepick/datepick.css">
<link rel="stylesheet" type="text/css" href="/bootstrap/css/font-awesome.css">
<link rel="stylesheet" type="text/css" href="/booking/css/datepick.css">
<script src="/datepick/datepick.js"></script>
<script type="text/javascript">
    $(document).ready(function(){

$('.datepicker').datepicker({
format: 'dd-mm-yyyy',
autoclose: true,
startDate: '0d'
});

$('.cell').click(function(){
$('.cell').removeClass('select');
$(this).addClass('select');
});

});
</script>
<style type="text/css">
    
    .datepicker {
    background-color: #795548 !important;
}
.disabled {
    color: black !important;
}
.datepicker table tr td.old, .datepicker table tr td.new {
    color: #6c757d!important;
}
.date1 input {

    color: black!important;

    }
    .bg-dark{
        background-color: #ff8591!important;
    }
    .datepicker::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color: black!important;
}
.datepicker::-moz-placeholder { /* Firefox 19+ */
  color: black!important;
}
.datepicker:-ms-input-placeholder { /* IE 10+ */
  color: black!important;
}
.datepicker:-moz-placeholder { /* Firefox 18- */
  color: black!important;
}
.date1 input {

    background-color: white!important;


}
</style>
<script type="text/javascript">
    $(document).ready(function() {
        var a = "<%=alert1%>";

       if(a == "returning values")
       {
           var time =  "<%=select_time%>";
           if(($('button.b1').val() == time) && ("<%=dateerr%>" !== "enter date")){
           $('button.b1').css("background-color","#007bff");
           $('button.b1').css("color","white")
         }
           else if(($('button.b2').val() == time) && ("<%=dateerr%>" !== "enter date")){
           $('button.b2').css("background-color","#007bff");
           $('button.b2').css("color","white")
         }
           else if(($('button.b3').val() == time) && ("<%=dateerr%>" !== "enter date")){
           $('button.b3').css("background-color","#007bff");
           $('button.b3').css("color","white")
         }
           else if(($('button.b4').val() == time) && ("<%=dateerr%>" !== "enter date")){
           $('button.b4').css("background-color","#007bff");
           $('button.b4').css("color","white")
         }
           
       }
    
       
}); 
</script>
</head>
<body>


    <div class="row justify-content-center mx-0">
            <div class="date1 card border-0">
               
                    <div class="card-header bg-dark">
                        <div class="mx-0 mb-0 row justify-content-sm-center justify-content-start px-1"> <input type="text" id="dp1" class="datepicker" placeholder="Pick Date" name="select_date" value="<%if(alert1 == 'returning values' && selected_date == undefined){ %><%=data.select_date%><%} else {%><%=selected_date%><%}%>" readonly required><span class="fa fa-calendar"></span> </div>
                    </div>
                    <div class="card-body p-3 p-sm-5">
                        <div class="row text-center mx-0" name="select_time">
                            <div class="col-md-6 col-12 my-1 px-2">
                                
                                <button class="cell py-1 btn-block b1" style="font-size: 13px;" type="radio" name="select_time" value="9:00AM">9:00AM</button>
                            </div>
                            <div class="col-md-6 col-12 my-1 px-2 ">
                                
                                <button class="cell py-1 btn-block b2" style="font-size: 13px;" type="radio" name="select_time" value="1:00PM">1:00PM</button>
                            </div>
                            <div class="col-md-6 col-12 my-1 px-2 ">
                                
                                <button class="cell py-1 btn-block b3" style="font-size: 13px;" type="radio" name="select_time" value="5:30PM">5:30PM</button>
                            </div>
                            <div class="col-md-6 col-12 my-1 px-2 ">
                                
                                <button class="cell py-1 btn-block b4" style="font-size: 13px;" type="radio" name="select_time" value="9:30PM">9:30PM</button>
                            </div>
                            
                        </div>
                       
                       
                    </div>
                
            </div>
        
    </div>

</body>
</html>
